{
  "name": "Flexibility Products Docs (Codespace)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml",
        "42Crunch.vscode-openapi",
        "stoplight.spectral"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "bash -lc \"npm install || true\"",
  "remoteUser": "vscode"
}